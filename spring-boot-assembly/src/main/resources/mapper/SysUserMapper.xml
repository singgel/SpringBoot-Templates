<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hks.assembly.mapper.SysUserMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, account, pwd, remark, create_time, update_time
    </sql>

    <insert id="addSysUser" parameterType="com.hks.assembly.entity.SysUser">
       insert into sys_user values(#{id}, #{name}, #{pwd}, #{remark}, #{createTime}, #{updateTime})
    </insert>

    <update id="updateSysUser" parameterType="com.hks.assembly.entity.SysUser">
        update sys_user set remark = #{remark} where id = #{id}
    </update>

    <delete id="deleteSysUser">
        delete from sys_user where id = #{id}
    </delete>

    <select id="getSysUser" resultType="com.hks.assembly.entity.SysUser">
        select <include refid="Base_Column_List"/> from sys_user where id = #{id}
    </select>

    <select id="getSysUserList" resultType="com.hks.assembly.entity.SysUser">
        select <include refid="Base_Column_List"/> from sys_user
    </select>

</mapper>
